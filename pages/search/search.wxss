.search{
    width: 100%;
    height: 50rpx;
    position: relative;
    font-family: "Microsoft YaHei UI";
}
.search input{
    width: 80%;
    height: 48rpx;
    border: 0;
    border-bottom: 1px solid #333;
    margin: 0 auto;
    padding-left: 10%;
}
.search .sear{
    width: 48rpx;
    height: 48rpx;
    position: absolute;
    top: 0;
    left: 5%;
    padding: 0;
    border: 0;
}



.movies{
    width: 100%
    padding-left: 10%;
    font-family: "Microsoft YaHei UI";
}
.movies .movie{
    width: 90%;
    margin: 0 auto;
    height: 300rpx;
    margin-top: 40rpx;
    position: relative;
}
.movies .movie .image{
    width: 180rpx;
    height: 240rpx;
}
.movies .movie .image image{
    width: 100%;
    height: 100%;
}
.movies .movie .title{
    position: absolute;
    top: 0;
    left: 210rpx;
    font-size: 36rpx;
    line-height:60rpx;
}
.movies .movie .directors{
    position: absolute;
    font-size: 30rpx;
    line-height: 60rpx;
    top: 120rpx;
    left: 210rpx;
    color: #666;
}
.movies .movie .directors .dir{
    margin-right: 15rpx;
}
.movies .movie .year{
    position: absolute;
    font-size: 30rpx;
    line-height: 60rpx;
    top: 60rpx;
    left: 210rpx;
    color: #666;
}
.movies .movie .genres{
    position: absolute;
    font-size: 30rpx;
    line-height: 60rpx;
    top: 180rpx;
    left: 210rpx;
    color: #666;
}
.movies .movie .genres .genre{
    margin-right: 15rpx;
}
