page{
    background: rgba(25,240,240,0.2);
}

.movie{
    padding: 50rpx 0 200rpx;
    width: 100%;
    height: auto;
    font-family: "Microsoft YaHei UI";
}
.movie .image{
    width: 600rpx;
    height: 800rpx;
    margin: 0 auto;
}
.movie .image image{
    width: 100%;
    height: 100%;
}
.movie .title{
    text-align: center;
    font-size: 48rpx;
    line-height: 60rpx;
    margin: 50rpx 0;
}

.movie .con{
    width: 600rpx;
    height: auto;
    margin: 0 auto;
    font-size: 30rpx;
}
.movie .con .view{
    color: #666;
    line-height: 48rpx;
    position: relative;
}
.movie .con .view .text{
    position: absolute;
    top: 0;
    left: 0;
}
.movie .con .view view{
    padding-left: 3.5em;
}
.movie .con .directors .name text{
    margin-right: 1em;
}
.movie .con .casts .cast text{
    margin-right: 1em;
}
.movie .con .genres .genre text{
    margin-right: 1em;
}

.movie .summary{
    width: 600rpx;
    margin: 50rpx auto;
}
.movie .summary text{
    font-size: 42rpx;
    line-height: 1.5em;
}
.movie .summary view{
    margin-top: 50rpx;
    font-size: 30rpx;
    line-height: 1.6em;
    text-indent: 2em;
    color: #666;
}

/*更多内容*/
.more{
    width: 400rpx;
    line-height: 80rpx;
    font-size: 48rpx;
    background: #fafafa;
    color: #333333;
    text-align: center;
    margin: 0 auto;
}